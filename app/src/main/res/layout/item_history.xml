<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded_12dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:foreground="@drawable/ripple12dp"
        android:clickable="true"
        android:focusable="true"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_history"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_white_rounded_12dp"
            android:backgroundTint="@color/purple_200"
            android:padding="12dp"
            app:tint="@color/white"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Food Item" />

        <TextView
            android:id="@+id/lblPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="@id/title" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/lblPrice"
            app:layout_constraintBottom_toBottomOf="@id/lblPrice"
            app:layout_constraintStart_toEndOf="@id/lblPrice" />

        <TextView
            android:id="@+id/lblPaidBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paid_by"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/lblPrice"
            app:layout_constraintStart_toStartOf="@id/lblPrice" />

        <TextView
            android:id="@+id/tvPaidBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tony Stark"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/lblPaidBy"
            app:layout_constraintBottom_toBottomOf="@id/lblPaidBy"
            app:layout_constraintStart_toEndOf="@id/lblPaidBy" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="DD/MM/YYYY"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/lblPaidBy"
            app:layout_constraintStart_toStartOf="@+id/lblPaidBy"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>